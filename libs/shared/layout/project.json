{
	"name": "layout",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/shared/layout/src",
	"prefix": "sls-ui",
	"projectType": "library",
	"tags": ["sls-ui-layout", "shared"],
	"targets": {
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/shared/layout/jest.config.ts",
				"tsConfig": "libs/shared/layout/tsconfig.spec.json"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		},
		"storybook": {
			"executor": "@storybook/angular:start-storybook",
			"options": {
				"port": 4400,
				"configDir": "libs/shared/layout/.storybook",
				"browserTarget": "layout:build-storybook",
				"compodoc": false
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"build-storybook": {
			"executor": "@storybook/angular:build-storybook",
			"outputs": ["{options.outputDir}"],
			"options": {
				"outputDir": "dist/storybook/layout",
				"configDir": "libs/shared/layout/.storybook",
				"browserTarget": "layout:build-storybook",
				"compodoc": false
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"test-storybook": {
			"executor": "nx:run-commands",
			"options": {
				"command": "test-storybook -c libs/shared/layout/.storybook --url=http://localhost:4400"
			}
		},
		"static-storybook": {
			"executor": "@nx/web:file-server",
			"dependsOn": ["build-storybook"],
			"options": {
				"buildTarget": "layout:build-storybook",
				"staticFilePath": "dist/storybook/layout",
				"spa": true
			},
			"configurations": {
				"ci": {
					"buildTarget": "layout:build-storybook:ci"
				}
			}
		}
	}
}
